@page
@model Website.Pages.StyleModel
@{
    ViewData["Title"] = "Style";
}

<h1>Style guide</h1>

<section>
    <h2>Headings</h2>
    <h1>Heading 1</h1>
    <h2>Heading 2</h2>
    <h3>Heading 3</h3>
    <h4>Heading 4</h4>
    <h5>Heading 5</h5>
    <h6>Heading 6</h6>
</section>

<section>
    <h2>Tables</h2>
    <table class="pure-table pure-table-horizontal pure-table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Day</th>
                <th scope="col">Week</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Monday</td>
                <td>3</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Tuesday</td>
                <td>3</td>
            </tr>
        </tbody>
    </table>
</section>